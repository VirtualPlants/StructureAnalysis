# -*-python-*-

import os

Import("env")

# Export symbols under windows
if env['compiler'] == 'mingw':
    LINKFLAGS=["-enable-stdcall-fixup",
               "-enable-auto-import",
               "-enable-runtime-pseudo-reloc",
               "-s"]
    env.AppendUnique(LINKFLAGS=LINKFLAGS)


py_dir = '../tree_statistic'

# Build wrappers as shared libraries
#sources = Split("""""")

LIBS = ['vptool', 'vpstat_tool', 'vpsequence',"vptree_statistic"]
env.AppendUnique(LIBS=LIBS)

env.ALEAWrapper("../stat_tool", "cstat_tool", ["cstat_tool.cpp"])

env.ALEAWrapper(py_dir, "ctree", ["trees/ctree.cpp"])
env.ALEAWrapper(py_dir, "ctrees", ["trees/ctrees.cpp"])
env.ALEAWrapper(py_dir, "int_fl_containers", ["int_fl_containers/int_fl_containers.cpp"])
env.ALEAWrapper(py_dir, "chmt", ["hmt/chmt.cpp"])

